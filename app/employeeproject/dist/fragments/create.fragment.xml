<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        id="Createdialog"
        title="Create New Employee"
    >
        <beginButton>
            <Button
                id="_IDGenButton1"
                text="Save"
                press="onSave"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="_IDGenButton2"
                text="Cancel"
                press="onCancel"
                type="Negative"
            />
        </endButton>

        <content>
            <VBox id="idVbox">
                <Input
                    id="_IDGenInput1"
                    value="{EmployeeModel>/fname}"
                    placeholder="First name"
                />
                <Input
                    id="_IDGenInput2"
                    value="{EmployeeModel>/lname}"
                    placeholder="Last name"
                />
                <Input
                    id="_IDGenInput3"
                    value="{EmployeeModel>/mobile}"
                    placeholder="Mobile"
                />
                <Input
                    id="_IDGenInput4"
                    value="{EmployeeModel>/email}"
                    placeholder="Email"
                />
                <Input
                    id="_IDGenInput5"
                    value="{EmployeeModel>/address}"
                    placeholder="Address"
                />
                <Input
                    id="_IDGenInput6"
                    value="{EmployeeModel>/salary}"
                    placeholder="Salary"
                />
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
